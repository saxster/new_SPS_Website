---
const { summary } = Astro.props;
---

<div class="executive-briefing-card">
    <div class="briefing-header">
        <span class="briefing-icon">⚡</span>
        <h3>EXECUTIVE BRIEFING</h3>
        <span class="briefing-tag">C-SUITE VIEW</span>
    </div>
    <div class="briefing-content">
        <ul>
            {summary.map((point: string) => (
                <li>{point}</li>
            ))}
        </ul>
    </div>
</div>

<style>
    .executive-briefing-card {
        background: var(--color-surface-elevated, #1A1E26);
        border: 2px solid var(--color-border-highlight, #FF4D00);
        border-left-width: 4px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        font-family: inherit;
    }

    .briefing-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 1rem;
        border-bottom: 1px solid var(--color-border-accent, #404040);
        padding-bottom: 0.75rem;
    }

    .briefing-header h3 {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 800;
        letter-spacing: 1px;
        color: var(--color-text-primary, #FAFAFA);
        flex: 1;
        text-transform: uppercase;
    }

    .briefing-icon {
        color: var(--color-primary-accent, #FF4D00);
        font-size: 1.25rem;
    }

    .briefing-tag {
        font-size: 0.65rem;
        background: var(--color-primary-accent, #FF4D00);
        color: #000;
        padding: 3px 8px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .briefing-content ul {
        margin: 0;
        padding-left: 0;
        list-style: none;
    }

    .briefing-content li {
        margin-bottom: 0.75rem;
        font-size: 0.95rem;
        line-height: 1.6;
        color: var(--color-text-secondary, #A3A3A3);
        padding-left: 1.5rem;
        position: relative;
    }

    .briefing-content li::before {
        content: "▸";
        position: absolute;
        left: 0;
        color: var(--color-primary-accent, #FF4D00);
        font-weight: bold;
    }

    .briefing-content li:last-child {
        margin-bottom: 0;
    }
</style>
