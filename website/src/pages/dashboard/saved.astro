---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import SavedArticles from '../../components/dashboard/SavedArticles';

// Force server-side rendering for this page
export const prerender = false;
---

<DashboardLayout activeTab="saved">
  <div class="space-y-8">
    <!-- Header -->
    <section class="bg-neutral-900 border-2 border-neutral-800 p-6">
      <div class="flex items-start justify-between">
        <div>
          <h2 class="text-2xl font-black text-neutral-100 mb-2">SAVED INTELLIGENCE</h2>
          <p class="text-neutral-400 text-sm font-mono">
            Bookmarked articles and reports for quick reference
          </p>
        </div>
        <div class="flex items-center gap-2 text-xs text-neutral-500 font-mono">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
          </svg>
          <span>BOOKMARK ARTICLES TO SAVE THEM HERE</span>
        </div>
      </div>
    </section>

    <!-- Saved Articles Component -->
    <SavedArticles client:load />
  </div>
</DashboardLayout>
