---
import Layout from '../../layouts/Layout.astro';
import { getLiveIntelligence } from '../../lib/content-live';

// SSR Mode: Render on request to see new files instantly
export const prerender = false;

const intel = getLiveIntelligence();
---

<Layout title="Intelligence Feed | SPS Command" description="Real-time strategic briefings and threat analysis.">
  <div class="pt-32 min-h-screen bg-[#050505] text-white">
    <div class="brutalist-container pl-20 max-w-6xl mx-auto">
        <div class="mb-12 border-b border-neutral-800 pb-8 flex justify-between items-end">
            <div>
                <h1 class="text-heading-1 text-white mb-4">INTELLIGENCE FEED</h1>
                <p class="text-xl text-neutral-400 font-mono">
                  // LIVE THREAT MONITORING
                </p>
            </div>
            <div class="text-right font-mono text-xs text-primary-accent animate-pulse">
                STATUS: LIVE
            </div>
        </div>

        <div class="grid grid-cols-1 gap-4">
            {intel.map((item) => (
                <a href={`/intelligence/${item.slug}`} class="block p-6 border border-neutral-800 bg-neutral-900/30 hover:bg-neutral-900 hover:border-primary-accent transition-all group">
                    <div class="flex justify-between items-start mb-2">
                        <div class="flex items-center gap-3">
                            <span class={`text-[10px] font-bold uppercase px-2 py-1 rounded ${
                                item.data.severity === 'Critical' ? 'bg-red-900 text-red-200' : 
                                item.data.severity === 'High' ? 'bg-orange-900 text-orange-200' : 
                                'bg-neutral-800 text-neutral-400'
                            }`}>
                                {item.data.severity}
                            </span>
                            <span class="text-[10px] font-mono text-neutral-500">
                                {item.data.sector.toUpperCase()}
                            </span>
                        </div>
                        <span class="text-[10px] font-mono text-neutral-500">
                            {item.data.pubDate.toLocaleDateString()} {item.data.pubDate.toLocaleTimeString()}
                        </span>
                    </div>
                    <h3 class="text-xl font-bold text-gray-200 group-hover:text-primary-accent transition-colors">
                        {item.data.title}
                    </h3>
                </a>
            ))}
            
            {intel.length === 0 && (
                <div class="p-12 text-center text-neutral-600 font-mono">
                    NO INTELLIGENCE REPORTS AVAILABLE.
                </div>
            )}
        </div>
    </div>
  </div>
</Layout>