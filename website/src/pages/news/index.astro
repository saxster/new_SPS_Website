---
// SSR: This page is rendered on-demand (not pre-built)
// Breaking news appears instantly without site rebuild
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const briefings = (await getCollection('intelligence'))
    .filter(b => !b.data.draft)
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const leadStory = briefings[0];
const topStories = briefings.slice(1, 4);
const tickerStories = briefings.slice(4);

const severityColors = {
    Critical: 'bg-red-600 text-white',
    High: 'bg-orange-600 text-white',
    Medium: 'bg-yellow-600 text-black',
    Low: 'bg-blue-600 text-white'
};
---

<Layout title="SPS News & Views | Autonomous Intelligence" description="Real-time security intelligence curated by AI.">
    <main class="bg-white min-h-screen text-neutral-900 font-sans">
        
        <!-- Header -->
        <header class="border-b border-neutral-200 py-6 sticky top-0 bg-white/95 backdrop-blur z-50">
            <div class="max-w-7xl mx-auto px-6 flex justify-between items-center">
                <div class="flex items-center gap-4">
                    <div class="w-8 h-8 bg-black rounded flex items-center justify-center text-white font-black text-xl">S</div>
                    <h1 class="text-2xl font-bold tracking-tight text-neutral-900">
                        SPS <span class="text-primary-accent font-black">NEWS</span>
                    </h1>
                </div>
                <div class="text-xs font-mono text-neutral-500 uppercase tracking-widest hidden md:block">
                    {new Date().toLocaleDateString('en-IN', { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' })}
                </div>
            </div>
        </header>

        <!-- Main Content Area -->
        <div class="max-w-7xl mx-auto px-6 py-8">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
                
                {/* Left Column: Lead Story (8 cols) */}
                <div class="lg:col-span-8 space-y-8">
                    {leadStory && (
                        <article class="group cursor-pointer">
                            <div class="relative h-96 w-full bg-neutral-900 rounded-xl overflow-hidden mb-6">
                                <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-80"></div>
                                <div class="absolute bottom-0 left-0 p-8">
                                    <span class={`inline-block px-3 py-1 rounded text-[10px] font-black uppercase tracking-widest mb-4 ${severityColors[leadStory.data.severity]}`}>
                                        {leadStory.data.severity} ALERT
                                    </span>
                                    <h2 class="text-4xl md:text-5xl font-black text-white leading-tight mb-4 group-hover:text-primary-accent transition-colors">
                                        {leadStory.data.title}
                                    </h2>
                                    <div class="flex items-center gap-4 text-neutral-400 text-sm font-mono">
                                        <span>{leadStory.data.pubDate.toLocaleDateString('en-IN')}</span>
                                        <span>•</span>
                                        <span>{leadStory.data.sector}</span>
                                        <span>•</span>
                                        <span class="text-primary-accent">AI Consensus {leadStory.data.consensus_score}%</span>
                                    </div>
                                </div>
                            </div>
                            <p class="text-xl text-neutral-600 leading-relaxed max-w-3xl">
                                {leadStory.body.substring(0, 200)}... 
                                <a href={`/intelligence/briefings/${leadStory.slug}`} class="text-blue-600 font-bold hover:underline">Read Analysis →</a>
                            </p>
                        </article>
                    )}

                    <div class="border-t border-neutral-200 my-8"></div>

                    {/* Secondary Stories Grid */}
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        {topStories.map(story => (
                            <article class="flex flex-col gap-3 group">
                                <div class="flex items-center gap-3">
                                    <span class="w-2 h-2 bg-neutral-300 rounded-full"></span>
                                    <span class="text-[10px] font-black text-neutral-500 uppercase tracking-widest">{story.data.sector}</span>
                                </div>
                                <h3 class="text-xl font-bold text-neutral-900 leading-snug group-hover:text-blue-600 transition-colors">
                                    <a href={`/intelligence/briefings/${story.slug}`}>
                                        {story.data.title}
                                    </a>
                                </h3>
                                <p class="text-sm text-neutral-500 line-clamp-3">
                                    {story.body.substring(0, 150)}...
                                </p>
                                <div class="text-[10px] font-mono text-neutral-400 mt-auto">
                                    {story.data.pubDate.toLocaleDateString('en-IN')}
                                </div>
                            </article>
                        ))}
                    </div>
                </div>

                {/* Right Column: The "Wire" (4 cols) */}
                <div class="lg:col-span-4 border-l border-neutral-200 pl-8 hidden lg:block">
                    <h3 class="text-xs font-black text-neutral-400 uppercase tracking-widest mb-6 flex items-center gap-2">
                        <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                        Live Intelligence Wire
                    </h3>
                    
                    <div class="space-y-6">
                        {tickerStories.map(story => (
                            <div class="pb-6 border-b border-neutral-100 last:border-0">
                                <div class="flex justify-between items-start mb-2">
                                    <span class={`text-[9px] font-bold px-1.5 py-0.5 rounded uppercase ${severityColors[story.data.severity]}`}>
                                        {story.data.severity}
                                    </span>
                                    <span class="text-[10px] font-mono text-neutral-400">
                                        {story.data.pubDate.toLocaleDateString('en-IN')}
                                    </span>
                                </div>
                                <a href={`/intelligence/briefings/${story.slug}`} class="block text-sm font-bold text-neutral-800 hover:text-blue-600 mb-1">
                                    {story.data.title}
                                </a>
                                <div class="text-[10px] text-neutral-500 font-mono">
                                    Source: {story.data.analysis_engine}
                                </div>
                            </div>
                        ))}
                        {tickerStories.length === 0 && (
                            <div class="text-sm text-neutral-400 italic">No additional signals detected in this cycle.</div>
                        )}
                    </div>

                    {/* Fact Check Widget */}
                    <div class="mt-12 bg-neutral-50 border border-neutral-200 p-6 rounded-lg">
                        <h4 class="text-xs font-black text-neutral-900 uppercase tracking-widest mb-4">
                            AI Fact Check
                        </h4>
                        <p class="text-xs text-neutral-500 leading-relaxed mb-4">
                            Our "Red Team" agent automatically validates every news signal against Indian Law (PSARA, DPDP) before publishing.
                        </p>
                        <div class="flex items-center gap-2">
                            <div class="h-1 flex-1 bg-neutral-200 rounded overflow-hidden">
                                <div class="h-full bg-green-500 w-[98%]"></div>
                            </div>
                            <span class="text-[10px] font-mono font-bold text-green-600">98% Accuracy</span>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </main>
</Layout>